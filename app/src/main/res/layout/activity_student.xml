<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/olb_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quanla.smartschool.activities.StudentActivity">


    <ImageView
        android:id="@+id/iv_Students"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:id="@+id/ib_Rotation_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate_left_black_24px"
            />
        <ImageButton
            android:id="@+id/ib_Rotation_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate_right_black_24px"
            />
    </LinearLayout>


</RelativeLayout>
